{
  "version": 2,
  "buildCommand": "npm install && cd client && npm install && npm run build && cd ../server && npm install && npx prisma generate",
  "outputDirectory": "client/dist",
  "functions": {
    "server/api/index.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}